<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

  <LinearLayout
      android:id="@+id/weibo_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/weibo_share_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微博-图片"/>

    <Button
        android:id="@+id/weibo_share_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微博-网页"/>

    <Button
        android:id="@+id/weibo_share_txt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微博-图文"/>
  </LinearLayout>

  <LinearLayout android:id="@+id/weixin_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/weixin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微信-图片"/>

    <Button
        android:id="@+id/weixin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微信-网页"/>

    <Button
        android:id="@+id/weixin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="微信-图文"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/wechat_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <Button
        android:id="@+id/wechat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="PYQ-图片"/>
    <Button
        android:id="@+id/wechat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="PYQ-网址"/>
    <Button
        android:id="@+id/wechat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="PYQ-图文"/>
  </LinearLayout>

  <LinearLayout android:id="@+id/qq_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/qq_url_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ-网页1"/>

    <Button
        android:id="@+id/qq_url_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ-网页2"/>

    <Button
        android:id="@+id/qq_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ-图片1"/>

    <Button
        android:id="@+id/qq_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ-图片2"/>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/qzone_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/qzone_url1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QZ-网页1"/>
    <Button
        android:id="@+id/qzone_url2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QZ-网页2"/>

    <Button
        android:id="@+id/qzone_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QZ-图片1"/>
    <Button
        android:id="@+id/qzone_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QZ-图片2"/>

  </LinearLayout>



  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <Button
        android:id="@+id/weibo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博登录"/>

    <Button
        android:id="@+id/weixin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信登录"/>

    <Button
        android:id="@+id/qq_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ登录"/>


  </LinearLayout>
</LinearLayout>
